<h1>Listing currentunits</h1>
<p>
	Download: 
	<%= link_to "CSV", currentunits_path(format: "csv")%> 
	<%= link_to "Excel", currentunits_path(format: "xls")%> 


<%= form_tag replace_currentunits_path, multipart: true do %>
<h3> Replace Units Table </h3>
	<div id="spreadsheet-field" class="field">
		<%= file_field_tag :new_unit_list, :accept => "*.csv"%><br>
		<%= submit_tag "Import" %>
	</div>
<% end %>
</p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currentunits.each do |currentunit| %>
      <tr>
 		    <td><%= currentunit.property%></td>
		    <td><%= currentunit.unit_number%></td>
		    <td><%= currentunit.unit_type%></td>
		    <td><%= currentunit.square_feet%></td>
        <td><%= currentunit.rent%></td>
        <td><%= currentunit.date%></td>
        <td><%= link_to 'Show', currentunit %></td>
        <td><%= link_to 'Edit', edit_currentunit_path(currentunit) %></td>
        <td><%= link_to 'Destroy', currentunit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currentunit', new_currentunit_path %>

