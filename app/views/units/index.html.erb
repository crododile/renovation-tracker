<h1>Listing units</h1>

<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>Unit number</th>
      <th>Unit type</th>
      <th>Square feet</th>
      <th>Rent</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.property %></td>
        <td><%= unit.unit_number %></td>
        <td><%= unit.unit_type %></td>
        <td><%= unit.square_feet %></td>
        <td><%= unit.rent %></td>
        <td><%= unit.date %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

